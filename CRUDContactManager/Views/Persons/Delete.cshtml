@using CRUDContactManager.ViewModels.Persons
@model PersonResponse
@{
    ViewBag.Title = "Delete Person";
}

<div class="center-box">
    <form asp-action="Delete" method="post">
        <h1>Do you want to delete this person?</h1>
        @*PersonName*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="PersonName" class="form-label pt">Person Name</label>
            </div>
            <div class="flex-1">
                <input disabled="disabled" asp-for="PersonName" class="form-input" />
            </div>
        </div>
        @*EmailAddress*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Email" class="form-label pt">EmailAddress</label>
            </div>
            <div class="flex-1">
                <input disabled="disabled" asp-for="Email" class="form-input" />
            </div>
        </div> 
        @*ID*@
        <input type="hidden" asp-for="PersonID" />
        @*Submit*@
        <div class="form-field flex">
            <div class="w-25">
            
            </div>
            <div class="flex-1">
                
                <button type="submit" class="btn button-red-back mb-4">Delete</button>

                <div asp-validation-summary="All" class="text-red" ></div>

                @if (ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                        <ul>
                        @foreach (var error in ViewBag.Errors)
                        {
                            <li class="ml">@error</li>
                        }
                        </ul>
                    </div>
                }
            </div>
        </div>

    </form>
</div>
