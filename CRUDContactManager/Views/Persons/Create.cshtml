@using CRUDContactManager.ViewModels.Persons
@model CreatePersonViewModel
@{
    ViewBag.Title = "Create Person";
}

<div class="w-50">
    <form asp-action="create" method="post">
        <a asp-controller="Persons" asp-action="index">Go back to Persons List</a>
        <h1>Create Person</h1>
        @*PersonName*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Person.Name" class="form-label pt">Person Name</label>
            </div>
            <div class="flex-1">
                <input asp-for="Person.Name" class="form-input" />
                <span asp-validation-for="Person.Name" class="text-red"></span>
            </div>
        </div>
        @*EmailAddress*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Person.EmailAddress" class="form-label pt">EmailAddress</label>
            </div>
            <div class="flex-1">
                <input asp-for="Person.EmailAddress" class="form-input" />
                <span asp-validation-for="Person.EmailAddress" class="text-red"></span>
            </div>
        </div> 
        @*DateOfBirth*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Person.DateOfBirth" class="form-label pt">Date of Birth</label>
            </div>
            <div class="flex-1">
                <input asp-for="Person.DateOfBirth" class="form-input" />
                <span asp-validation-for="Person.DateOfBirth" class="text-red"></span>
            </div>
        </div>
        @*Gender*@
        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt">Gender</label>
            </div>
            <div class="flex-1">
                @{
                        string[] genders = (string[])Enum.GetNames(typeof(GenderOptions));
                    }
                    @foreach(string gender in genders)
                    {
                        <input asp-for="Person.Gender" type="radio" value="@gender" class="ml" />
                        <label for="@gender">@gender</label>
                    }
                <span asp-validation-for="Person.Gender" class="text-red"></span>
            </div>
        </div>
        @*Country*@
        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt" asp-for="Person.CountryID">Country</label>
            </div>
            <div class="flex-1">
                <select asp-for="Person.CountryID"
                        asp-items="@(new SelectList(Model.Countries, "CountryID", "CountryName"))">
                    <option value="" >Please Select</option>
                </select>
                <span asp-validation-for="Person.CountryID" class="text-red"></span>
            </div>
        </div>
        @*Address*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Person.Address" class="form-label pt">Address</label>
            </div>
            <div class="flex-1">
                <textarea asp-for="Person.Address" class="form-input"></textarea>
                <span asp-validation-for="Person.Address" class="text-red"></span>
            </div>
        </div>
        @*ReceiveNewsLetters*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Person.ReceiveNewsLetters" class="form-label pt">ReceiveNewsLetters</label>
            </div>
            <div class="flex-1">
                <input asp-for="Person.ReceiveNewsLetters" type="checkbox"/>
            </div>
        </div>
        @*Submit*@
        <div class="form-field flex">
            <div class="w-25">
            
            </div>
            <div class="flex-1">
                
                <button type="submit" class="btn btn-primary mb-4">Create Person</button>

                <div asp-validation-summary="All" class="text-red" ></div>

                @if (ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                        <ul>
                        @foreach (var error in ViewBag.Errors)
                        {
                            <li class="ml">@error</li>
                        }
                        </ul>
                    </div>
                }
            </div>
        </div>

    </form>
</div>
