@model IEnumerable<PersonResponse>
@{
    ViewBag.Title = "Persons";
}

<form asaction="~/persons/index" method="get">
    <a asp-controller="Persons" asp-action="Create">Create Person</a>
    <a asp-controller="Persons" asp-action="PersonsPDF">Download as PDF</a>
    <a asp-controller="Persons" asp-action="PersonsCSV">Download as CSV</a>
    <h1>Persons</h1>

    <div class="box flex">
        <div class="flex-1">
            <select class="form-input" name="searchBy">
                @foreach (var field in ViewBag.SearchFields)
                {
                    if (field.Key == ViewBag.CurrentSearchBy)
                    {
                        <option value="@field.Key" selected= "selected">@field.Value</option>   
                    }
                    <option value="@field.Key" >@field.Value</option>   

                }
            </select>
        </div>
        <div>
            <input type="search" id="search" class="form-input" placeholder="Search" name="searchString" value="@ViewBag.CurrentSearchString" />
        </div>

        <div>
            <button class="btn btn-primary">
                Search
            </button>
            <a href="~/persons/Index">Clear all</a>
        </div>
    </div>

    <div class="rounded-box border-base-content/5 bg-base-100 overflow-x-auto border">

        <table class="table" style="width: 80%">
            <thead>
                <tr>
                    @foreach (var Column in (ViewBag.Columns))
                        {
                            @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData)
                                            {
                                            { "ColumnName" , Column.Key },
                                            {"DisplayName", Column.Value}
                                            }
                            );
                        }
                    </tr>
            </thead>

            <tbody>
                @foreach (var person in Model)
                {
                    <tr class="hover:bg-base-300">
                        <td>@person.PersonName</td>
                        <td>@person.Email</td>
                        <td>@person.DateOfBirth?.ToString("dd/MM/yyyy")</td>
                        <td>@person.Country</td>
                        <td>@person.Age</td>
                        <td>@person.Gender</td>
                        <td>
                            <a asp-controller="Persons" asp-action="Update" asp-route-personID="@person.PersonID">Update <i class="fa fa-pencil" aria-hidden="true"></i></a>
                        </td>
                        <td>
                            <a asp-controller="Persons" asp-action="Delete" asp-route-personID="@person.PersonID">Delete <i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        
        </table>
    </div>
</form>

