@model IEnumerable<PersonResponse>
@{
    ViewBag.Title = "Persons";
}

<h1>Persons</h1>

<table class="table w-50" >
    <thead>
        <tr>
            <th>Person Name</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Country</th>
            <th>Age</th>
            <th>Gender</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Name</td>
                <td>@person.EmailAddress</td>
                <td>@person.DateOfBirth?.ToString("dd/MM/yyyy")</td>
                <td>@person.CountryName</td>
                <td>@person.Age</td>
                <td>@person.Gender</td>
            </tr>
        }
    </tbody>
        
</table>